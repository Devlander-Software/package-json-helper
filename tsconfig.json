{
  "compilerOptions": {
    "outDir": "./dist", 
    "declarationDir": "./typings",
    "allowJs": false,
    "declaration": true,
    "esModuleInterop": true,
    "types": ["node", "@types/jest"],
    "rootDir": "src",
    "noEmit": false,
    "target": "ESNext",
    "emitDecoratorMetadata": false,
    "module": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDeclarationOnly": false,
    "strict": false
    
  },
  "include": ["src/**/*", "bootstrap.cjs"],
  "exclude": ["node_modules", "**/*.spec.ts", "*.d.ts", "typings", "dist", "build-script.config.ts"]
}