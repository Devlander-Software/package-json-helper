{
  "compilerOptions": {
    "outDir": "cli", 
    "declarationDir": "typings",
    "allowJs": false,
    "declaration": true,
    "esModuleInterop": true,
    "types": ["node", "@types/jest"],
    "rootDir": "src",
    "rootDirs": ["pkg-helper", "src"],
    "noEmit": false,
    "target": "ESNext",
    "emitDecoratorMetadata": false,
    "module": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDeclarationOnly": true,
    "strict": false
    
  },
  "include": ["src/**/*", "bootstrap.cjs", "pkg-helper"],
  "exclude": ["node_modules", "**/*.spec.ts", "*.d.ts", "typings", "dist", "src/build-script.config.ts"]
}